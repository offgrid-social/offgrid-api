generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum DeviceType {
  cli
  web
  mobile
}

model Device {
  id         Int        @id @default(autoincrement())
  userId     String
  type       DeviceType
  name       String
  lastSeenAt DateTime   @default(now())
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@index([userId])
  @@unique([userId, name, type])
}

model UserShadow {
  userId    String   @id
  username  String?
  email     String?
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
